{
  "manifest_version": 3,
  "name": "TeamVault",
  "version": "1.0.0",
  "description": "End-to-end encrypted secret management â€” view and auto-fill secrets securely from TeamVault.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.teamvault.io/*",
        "https://*.teamvault.dev/*",
        "http://localhost:3000/*",
        "http://localhost:8080/*"
      ],
      "js": ["content.js"],
      "css": ["content-inject.css"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
